<!DOCTYPE html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <link rel="stylesheet" href="/projekt3/css/style.css">

</head>

<body>

    <div class="container">
        <div class="row" id="header">
            <div class="col">
                <a href="/projekt3/" class="nav-link">
                    <h1 class="text-center bold">Bibliotek</h1>
                </a>
            </div>
        </div>

        <div class="row genres" id="categories">
            <p><a href="/projekt3/hem/sida/{{sida}}/?categories=2&search={{search}}" class="btn btn-outlined btn-primary catbuttons">Fantasy</a></p>

            <p><a href="/projekt3/hem/sida/{{sida}}/?categories=5&search={{search}}" class="btn btn-outlined btn-primary catbuttons">Skräck</a></p>

            <p><a href="/projekt3/hem/sida/{{sida}}/?categories=3&search={{search}}" class="btn btn-outlined btn-primary catbuttons">Drama</a></p>

            <p><a href="/projekt3/hem/sida/{{sida}}/?categories=6&search={{search}}" class="btn btn-outlined btn-primary catbuttons">Komedi</a></p>

            <p><a href="/projekt3/hem/sida/{{sida}}/?categories=7&search={{search}}" class="btn btn-outlined btn-primary catbuttons">Biografi</a></p>

            <p><a href="/projekt3/hem/sida/{{sida}}/?categories=8&search={{search}}" class="btn btn-outlined btn-primary catbuttons">Äventyr</a></p>

            <p><a href="/projekt3/hem/sida/{{sida}}/?categories=9&search={{search}}" class="btn btn-outlined btn-primary catbuttons">Historia</a></p>

            <p><a href="/projekt3/hem/sida/{{sida}}/?categories=10&search={{search}}" class="btn btn-outlined btn-primary catbuttons">Sci-fi</a></p>

            <form class="search" method="get" action="/projekt3/hem/sida/1/?categories{{categories}}">
                <div class="form-group main-search">
                    <input type="search" name="search" placeholder="Sök" class="form-control" id="usr">
                    <button type="submit" value="Submit" id="sok" class="btn btn-default btn-sm">Sök</button>
                </div>
            </form>
        </div>

        <div class="row controls">
            <div class="col">
                <a href="{% if sida > 1 %}
                            /projekt3/hem/sida/{{sida-1}}/?categories={{categories}}&search={{search}}
                         {% else %}
                            #
                         {% endif %}
                         ">
                    <button type="button" id="previous" class="btn btn-default btn-sm">Föregående</button>
                </a>
            </div>

            <div class="col">
                <a href="{% if canGoNextPage %}
                            /projekt3/hem/sida/{{sida+1}}/?categories={{categories}}&search={{search}}
                         {% else %}
                            #
                         {% endif %}
                         ">
                    <button type="button" id="next" class="btn btn-default btn-sm">Nästa</button>
                </a>
            </div>
        </div>

        <div class="row" id="catalog">
            {% for book in books %}
            <div class="col-lg-4"><a href="/projekt3/bookinfo/{{ book.ISBN }}" class="nav-link">
                <img src="/projekt3/img/index.png" class="img-responsive icons" alt="book image">
                <p class="title">{{ book.title }}</p>
                <p class="author">{{ book.author }}</p><br/>
                <p class="genre">{{ book.genres }}</p>
            </a></div>
            {% endfor %}
        </div>

        <div class="row controls">
            <div class="col">
                <a href="{% if sida > 1 %}
                            /projekt3/hem/sida/{{sida-1}}/?categories={{categories}}&search={{search}}
                         {% else %}
                            #
                         {% endif %}
                         ">
                    <button type="button" id="previous" class="btn btn-default btn-sm">Föregående</button>
                </a>
            </div>

            <div class="col">
                <a href="{% if canGoNextPage %}
                            /projekt3/hem/sida/{{sida+1}}/?categories={{categories}}&search={{search}}
                         {% else %}
                            #
                         {% endif %}
                         ">
                    <button type="button" id="next" class="btn btn-default btn-sm">Nästa</button>
                </a>
            </div>
        </div>

        <div class="row" id="footer">
            <div class="col">
                <p></p>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>

</body>

</html>
